# -*- coding: utf-8 -*-
TestWidget: # ルートに追加

<TestWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # ラベル
        # Label:
        #     size_hint_y: 0.5
        #     id: label1
        #     font_size: 65
        #     text: root.text
        TextInput:
            id: text_box
            size_hint_x: 70
            font_size: 68
            focus: True
            on_text_validate: root.embedButtonClicked()

        Image:
            size_hint_y: 0.5
            allow_stretch: True
            source: root.image_src

        BoxLayout:
            size_hint_y: 0.1
            Button:
                id: button1
                text: "Embed"
                font_size: 68
                on_press: root.embedButtonClicked()

            Button:
                id: button2
                text: "Show"
                font_size: 68
                on_press: root.buttonClicked2()

            Button:
                id: button3
                text: "Extract"
                font_size: 68
                on_press: root.buttonClicked3()

            Button:
                id: button4
                text: "Description"
                font_size: 50
                on_press: root.descriptionButtonClicked()
                
<DescriptionView>:
    size_hint: None, None
    size: 800, 500
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "#I need to write description in this area."
            font_size: 30
        BoxLayout:
            padding: 200, 100
            Button:
                text: "Yes"
                on_press: root.clearButtonClicked()
